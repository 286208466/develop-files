<%- include header %>

<% for(var i=0;i<posts.length;i++){ %>
	<p>
		<h2>
			<a href="/u/<%=posts[i].name%>/<%=posts[i].time.day%>/<%=posts[i].title%>">
				<%= posts[i].title %>
			</a>
		</h2>
	</p>
	<p class="info">
		作者：<a href="/u/<%=posts[i].name%>"><%=posts[i].name%></a> |
		日期：<%= posts[i].time.minute %>
	</p>
	<p><%- posts[i].post %></p>
<% } %>
<%- include paging %>
<%- include footer %>