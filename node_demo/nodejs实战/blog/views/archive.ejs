<%- include header %>

<ul class="archive">
<% var lastYear=0 %>
<% for(var i=0;i<posts.length;i++){ %>
	<% if(lastYear != posts[i].time.year){ %>
		<li>
			<h3><%=posts[i].time.year%></h3>
		</li>
		<%lastYear=posts[i].time.year%>
		<li>
			<time>
				<%= posts[i].time.day %>
			</time>
		</li>
		<li>
			<a href="/u/<%=posts[i].name%>/<%=posts[i].time.day%>/<%=posts[i].title%>">
				<%= posts[i].title %>
			</a>
		</li>
	<% } %>
<% } %>

</ul>

<%- include footer %>